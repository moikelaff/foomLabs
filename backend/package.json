{
  "name": "inventory-allocation-backend",
  "version": "1.0.0",
  "description": "Backend API for Inventory Allocation System - Foom Lab Global",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "db:create": "node src/scripts/createDb.js",
    "db:migrate": "npx sequelize-cli db:migrate --migrations-path src/migrations",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo --migrations-path src/migrations",
    "db:seed": "npx sequelize-cli db:seed:all --seeders-path src/seeders",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all --seeders-path src/seeders",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "db:reset": "npx sequelize-cli db:migrate:undo:all --migrations-path src/migrations && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "inventory",
    "warehouse",
    "purchase-request",
    "webhook",
    "express",
    "sequelize",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "sequelize-cli": "^6.6.2"
  }
}
